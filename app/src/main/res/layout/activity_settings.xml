<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.core.project.picwiz.Settings"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/settingsLayout">

    <TextView
        android:text="@string/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userName" />

    <EditText
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/usernameField"
        android:textSize="16dp"
        android:layout_below="@+id/userName"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/check" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:id="@+id/check"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/usernameField"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/usernameField"
        android:text=">" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:id="@+id/space"
        android:layout_alignEnd="@+id/check"
        android:layout_below="@+id/usernameField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/selecttheme"
        android:id="@+id/textView"
        android:layout_below="@+id/space2"
        android:layout_alignParentStart="true" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/themeRadioGroup"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dark"
            android:id="@+id/darkRadioButton"
            android:layout_marginLeft="15dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/light"
            android:id="@+id/lightRadioButton"
            android:layout_marginLeft="15dp" />
    </RadioGroup>

    <TextView
        android:text="@string/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@+id/usernameField"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Email"
        android:ems="10"
        android:id="@+id/emailField"
        android:textSize="16dp"
        android:layout_below="@+id/email"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/checkEmail" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:id="@+id/checkEmail"
        android:layout_gravity="right"
        android:text=">"
        android:layout_alignTop="@+id/emailField"
        android:layout_toEndOf="@+id/usernameField"
        android:layout_alignBottom="@+id/emailField" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/emailField"
        android:layout_alignParentStart="true"
        android:id="@+id/space2" />

</RelativeLayout>
